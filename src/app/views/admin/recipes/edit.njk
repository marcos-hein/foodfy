{% extends "../layout.njk" %}

{% block content %}
    <form class="recipe-form" method="POST" action="/admin/recipes?_method=PUT">
        <div class="top-container">
            <h3>Editando receita</h3>

            <div class="submit-buttons">
                <button type="submit" form="form-delete" class="delete-button">Deletar</button>
                <button type="submit" class="button">Salvar receita</button>
            </div>
        </div>
        
        {% include './fields.njk' %}
        <input
            type="hidden"
            name="id"
            value="{{ recipe.id }}">

    </form>

    <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">

        <input
            type="hidden"
            name="id"
            value="{{recipe.id}}">

    </form>


{% include './add-field.njk' %}

{% endblock content %}