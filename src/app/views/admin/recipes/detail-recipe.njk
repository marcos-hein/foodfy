{% extends "../layout.njk" %}

{% block content %}
    <div class="content">
        <div class="top-container">
            <h3>Receita: {{ recipe.title }}</h3>
            <a href="/admin/recipes/{{recipe.id}}/edit" class="button">Editar receita</a>
        </div>
        <div class="detail-recipe">

            <div class="recipes-image">
                <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
            </div>
            <div class="recipes-name">
                <h2>{{ recipe.title }}</h2>
            </div>
            <div class="author-recipes">
                <p>por {{ recipe.author }}</p>
            </div>
            <div class="recipes-ingredients">
                <div class="subtitle">
                    <h3>Ingredientes</h3>

                    <span class="button hide-show">ESCONDER</span>
                </div>
                <ul class="recipe-hide-show">
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipes-prepararion">
                <div class="subtitle">
                    <h3>Modo de preparo</h3>

                    <span class="button hide-show">ESCONDER</span>
                </div>
                <ul class="recipe-hide-show">
                    {% for preparation in recipe.preparation %}
                        <li>{{ preparation }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipes-information">
                <div class="subtitle">
                    <h3>Informações adicionais</h3>

                    <span class="button hide-show">ESCONDER</span>
                </div>
                <p class="recipe-hide-show">{{ recipe.information }}</p>
            </div>
        </div>
        
    </div>

    <script src="/scripts.js"></script>
{% endblock content %}