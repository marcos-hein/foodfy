{% extends "layout.njk" %}


{% block content %}
    <div class="admin content">
        <div class="manage-recipes">
            <h2>Gerenciar receitas</h2> 
        </div>

        <section class="admin cards">
            {% for recipe in recipes %}
                <div class="admin card" id={{recipes.indexOf(recipe)}}>
                    <div class="admin recipe-image">
                        <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
                    </div>
                    <div class="recipe-detail">
                        <div class="admin recipe-name">
                            <h3>{{ recipe.title }}</h3>
                        </div>
                        <div class="admin author-recipe">
                            <p>por {{ recipe.author }}</p>
                        </div>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
            
        </section>
    </div>
        
    <script src="/scripts.js"></script>
{% endblock content %}
