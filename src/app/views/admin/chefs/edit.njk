{% extends "../layout.njk" %}

{% block content %}
    <form class="chef-form" method="POST" action="/admin/chefs?_method=PUT">
        <div class="top-container">
            <h3>Editando chef</h3>

            <div class="submit-buttons">
                <button type="submit" form="form-delete" class="delete-button">Deletar</button>
                <button type="submit" class="button">Salvar chef</button>
            </div>
        </div>
        
        {% include './fields.njk' %}
        <input
            type="hidden"
            name="id"
            value="{{ chef.id }}">

    </form>

    <form id="form-delete" method="POST" action="/admin/chefs?_method=DELETE">

        <input
            type="hidden"
            name="id"
            value="{{chef.id}}">

    </form>


{% include './add-field.njk' %}

{% endblock content %}