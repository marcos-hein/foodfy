{% extends "../layout.njk" %}

{% block content %}
    <div class="content">
        <div class="top-container">
            <h3>Chef: {{ chef.name }}</h3>
            <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
        </div>
        <div class="detail-chef">
            <div class="chef-avatar">
                <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">
            </div>

            <div class="chef-name">
                <h2>{{ chef.name }}</h2>
            </div>

            <div class="amount-of-recipes">
                <p>
                    {{chef.total_recipes}}
                    {% if chef.total_recipes > 1 %} receitas {% endif %}
                    {% if chef.total_recipes <= 1 %} receita {% endif %}
                </p>
            </div>
        </div>
            <div class="admin content">
                <div class="manage">
                    <h2>Receitas</h2> 
                </div>

                <section class="admin cards recipes">
                    {% for recipe in recipes %}
                        <div class="admin card" id={{recipes.indexOf(recipe)}}>
                            <div class="admin recipe-image">
                                <img src={{recipe.image}} alt="Imagem de {{ recipe.title }}">
                            </div>
                            <div class="recipe-detail">
                                <div class="admin recipe-name">
                                    <h3>{{ recipe.title }}</h3>
                                </div>
                                <div class="admin author-recipe">
                                    <p>por {{ recipe.chef_name }}</p>
                                </div>
                                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                            </div>
                        </div>
                    {% endfor %}
                    
                </section>
            </div>

    </div>
    

    {# <script src="/scripts.js"></script> #}
{% endblock content %}