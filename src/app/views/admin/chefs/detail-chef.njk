{% extends "../layout.njk" %}

{% block content %}
    <div class="content">
        <div class="top-container">
            <h3>Chef: {{ chef.name }}</h3>
            <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
        </div>
        <div class="detail-chef">
            <div class="chef-avatar">
                <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">
            </div>

            <div class="chef-name">
                <h2>{{ chef.name }}</h2>
            </div>

            <div class="amount-of-recipes">
                <p>X receitas</p>
            </div>

            <div class="grade com receitas">
                
            </div>

    {# <script src="/scripts.js"></script> #}
{% endblock content %}