{% extends "../layout.njk" %}

{% block content %}
    <div class="content">
        <div class="top-container">
            <h3>Chef: {{ chef.name }}</h3>
            <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar receita</a>
        </div>
        <div class="detail-chef">

            <div class="chefs-avatar">
                <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">
            </div>
            <div class="chefs-name">
                <h2>{{ chef.name }}</h2>
            </div>
            <div class="amount-of-recipes">
                <p>Quantidade de receitas</p>
            </div>
            <div class="grade com receitas">
                <div class="subtitle">
                    <h3>Receitas</h3>
                </div>
            </div>

    <script src="/scripts.js"></script>
{% endblock content %}