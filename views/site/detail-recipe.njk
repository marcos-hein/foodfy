{% extends "layout.njk" %}

{% block content %}
    <div class="content">
        <div class="detail-recipe">
            <div class="recipes-image">
                <img src="{{ recipes.image }}" alt="Imagem de {{ recipes.title }}">
            </div>
            <div class="recipes-name">
                <h2>{{ recipes.title }}</h2>
            </div>
            <div class="author-recipes">
                <p>por {{ recipes.author }}</p>
            </div>
            <div class="recipes-ingredients">
                <div class="subtitle">
                    <h3>Ingredientes</h3>

                    <span class="button">ESCONDER</span>
                </div>
                <ul class="recipe-hide-show">
                    {% for ingredient in recipes.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipes-prepararion">
                <div class="subtitle">
                    <h3>Modo de preparo</h3>

                    <span class="button">ESCONDER</span>
                </div>
                <ul class="recipe-hide-show">
                    {% for preparation in recipes.preparation %}
                        <li>{{ preparation }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipes-information">
                <div class="subtitle">
                    <h3>Informações adicionais</h3>

                    <span class="button">ESCONDER</span>
                </div>
                <p class="recipe-hide-show">{{ recipes.information }}</p>
            </div>
        </div>
        
    </div>

    <script src="/scripts.js"></script>
{% endblock content %}