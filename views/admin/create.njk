{% extends "layout-admin.njk" %}

{% block content %}
    <form class="recipe-form" action="/admin/recipes" method="POST">
        <div class="top-container">
            <h3>Criando receita</h3>
            <button type="submit" class="button">Salvar receita</button>

        </div>
        <div class="recipe-item">
            <div>Imagem da receita</div>
            <div>
                <input
                    type="url"
                    name="image"
                    placeholder="https://"
                >
            </div>
        </div>

        <div class="recipe-item">
            <div>Ingredientes</div>
            <div id="ingredients">
                <div class="ingredient">
                    <input
                        type="text"
                        name="ingredients[]"
                        placeholder="Ingrediente"
                    >
                </div>
            </div>

            <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
        </div>

        <div class="recipe-item">
            <div>Modo de preparo</div>
            <div id="steps">
                <div class="step">
                    <input
                        type="text"
                        name="preparation[]"
                        placeholder=""
                    >
                </div>
            </div>

            <button type="button" class="add-step">Adicionar novo passo</button>
        </div>

        <div class="recipe-item">
            <div>Informações adicionais</div>
            <div>
                <textarea name="information" cols="30" rows="10"></textarea>
            </div>
        </div>
    </form>


    <script src="/scripts.js"></script>
{% endblock content %}