{% extends "layout.njk" %}

{% block content %}
    <div class="recipe-image">
        <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
    </div>
    <div class="recipe-name">
        <h3>{{ recipe.title }}</h3>
    </div>
    <div class="author-recipe">
        <p>por {{ recipe.author }}</p>
    </div>
{% endblock content %}